<a href="/articles"><img class="icon" src="/images/doc.svg" width="30" heigh="30"></a>
<a class="write" href="/articles">Back to articles</a>

<h3>Category: <%= category %></h3>

<% articles.reverse().forEach(function (article) { %>
  <div class="articles">
    <a class="category" href="/categories/<%= article.category %>">
    <%= article.category %>
    </a>
    <br>
    <p style="font-size: 16px">
      <%= article.content %>
      <br>
      <span class="by" >
        by
      </span>
      <a class="author" href="/authors/<%= article.author %>">
        <%= article.author %>
      </a>
      <span> Â· </span>
      <% var h = article.date.getHours() - article.date.getTimezoneOffset() / 60 %>
      <% var x = "am" %>
      <% var min = article.date.getMinutes() %>
      <% var stringMin = min.toString() %>
      <% if (min < 10) { stringMin = "0" + min.toString()} %>
      <% if (h >= 13 && h < 24) {
        h = h - 12;
        x = "pm";
      }
      else if (h == 12) {
        x = "pm";
      } else if (h == 24) {
         x = "am";
       } else {
          x = "am";
        } %>
      <% var month = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"] %>
      <span class="date" ><%= month[article.date.getMonth()] %> <%= article.date.getDate() %> at <%= h %>:<%= stringMin %><%= x %></span>
      <div style="text-align: right">
        <a href="/categories/<%= article.category %>/<%= article._id %>/edit" class="btn btn-small" style="padding: 6px 16px 7px 16px; margin-right: 80px;">Edit</a>
        <form class="delete-button" action="/categories/<%= article.category %>/<%= article._id %>?_method=DELETE" method="post" style="margin-top: -25px; text-align: right; " >
            <input type="submit" value="Delete" class="btn btn-small">
        </form>
      </div>
    </p>
  </div>
<% }) %>
