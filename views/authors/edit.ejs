<form action="/authors/<%= article.author %>/<%= article._id %>?_method=PATCH" method="post">
  <div class="form-group">
    <label>Subject</label><br>
    <input type="text" class="form-control" name="article[category]"  value="<%= article.category %>" required maxlength="70"><br/>
    <label>Contents</label>
    <textarea class="form-control" name="article[content]" rows="5" required maxlength="2000"><%= article.content %></textarea><br/>
  <input type="submit" value="Submit" class="btn">
  </div>
</form>
