<form action="/articles/<%= article._id %>?_method=PATCH" method="post">
  <div class="form-group">
    <input class="form-control" name="article[author]" value="<%= article.author %>"><br/>
    <input class="form-control" name="article[content]"  value="<%= article.content %>"><br/>
    <input type="text" class="form-control" name="article[category]"  value="<%= article.category %>"><br/>
  <input type="submit" class="btn-lg">
  </div>
</form>
